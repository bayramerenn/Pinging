@model List<Pinging.Entity.Concrete.Ip>

@{
    ViewData["Title"] = "List";
}

<br />
<br />
<a style="margin-top:30px;" asp-action="Create" class="btn btn-secondary">Create</a>

<br />
<br />
<table class="table table-sm table-striped table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ip Address</th>
            <th scope="col">Ip Host Name</th>
            <th scope="col">Adsl Type</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.IpAddress</td>
                <td>@item.IpHostName</td>
                <td>@item.AdslTypes.AdslTypeDesc</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>

</table>

